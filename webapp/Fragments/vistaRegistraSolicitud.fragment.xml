            <Panel height="auto" width="65rem" headerText="" expandable="false" expanded="true" expandAnimation="true" backgroundDesign="Solid">
                <content>
                    <form:Form width="100%" editable="true" visible="true">
                        <form:title>
                            <core:Title text="Descripción del Servicio Solicitado" level="Auto"/>
                        </form:title>
                        <form:formContainers>
                            <form:FormContainer visible="true">
                                <form:formElements>
                                    <form:FormElement visible="true">
                                        <form:label>
                                            <Label text="Indicar el problema presentado en el equipo o red y clave del equipo si lo tuviera" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="RTL" visible="true"/>
                                        </form:label>
                                        <form:fields>
                                            <TextArea rows="5" cols="20" maxLength="0" wrapping="None" enabled="true" required="false" valueStateText="Invalid entry" visible="true"/>
                                        </form:fields>
                                    </form:FormElement>
                                </form:formElements>
                                <form:title/>
                            </form:FormContainer>
                        </form:formContainers>
                        <form:layout>
                            <form:ResponsiveGridLayout adjustLabelSpan="false" columnsL="2" labelSpanL="3" columnsM="1" labelSpanM="2" labelSpanS="12"/>
                        </form:layout>
                    </form:Form>
                </content>
            </Panel>
            
            <HBox alignItems="Inherit" class="sapUiMediumMarginTop" wrap="Wrap" direction="Row" fitContainer="false" width="auto" height="auto" justifyContent="Inherit" renderType="Div" visible="true" displayInline="false">
				<items>
					<Button text="Guardar" type="Accept" class="sapUiSmallMarginBegin" icon="sap-icon://save" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" />
					<ToolbarSpacer width="2rem" />
					<Button text="Cancelar" press="cancelRegistraSolic" type="Reject" icon="sap-icon://cancel" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" />
				</items>
			<layoutData/>
