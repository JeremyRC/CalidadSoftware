<core:FragmentDefinition
	xmlns			=	"sap.m"
	xmlns:core		=	"sap.ui.core"
	xmlns:rte		=	"sap.ui.richtexteditor"
	xmlns:form		=	"sap.ui.layout.form"
	xmlns:l			=	"sap.ui.layout">
	
	<VBox alignItems="Start" wrap="Wrap" direction="Column" fitContainer="false" width="auto" height="auto" justifyContent="Center" renderType="Div" visible="true" displayInline="false">
        
        <items>
        	
        	<HBox alignItems="Center" class="sapUiResponsiveMargin" direction="Row" fitContainer="false" width="auto" height="auto" renderType="Div" visible="true" displayInline="false">
                <items>
                    <Title text="Registrar Solicitud" titleStyle="H2" width="auto" textAlign="Center" visible="true" wrapping="false"/>
                </items>
                <layoutData/>
            </HBox>
            
            <Panel height="auto" width="100%" headerText="" expandable="false" expanded="true" expandAnimation="true" backgroundDesign="Solid">
                <content>
                    <HBox alignItems="Stretch" direction="Row" fitContainer="false" width="auto" height="auto" justifyContent="Start" renderType="Div" visible="true" displayInline="false" class="sapUiResponsiveMargin">
                        <items>
                            <Label text="Fecha :" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true" class="sapUiTinyMarginTop"/>
                            <ToolbarSpacer width="10.5rem"/>
                            <DatePicker placeholder="dd/mm/aaaa" width="15rem" displayFormat="medium" required="false" valueStateText="Invalid entry" enabled="true" visible="true" valueFormat="yyyyMMdd"/>
                            <ToolbarSpacer width="5rem"/>
                            <Label text="N° Registro de Documento Informática :" design="Standard" width="auto" required="false" textAlign="Begin" textDirection="Inherit" visible="true" class="sapUiTinyMarginTop sapUiMediumMarginEnd"/>
                            <Input type="Text" showValueHelp="false" enabled="true" visible="true" width="8rem" valueHelpOnly="false" required="false" valueStateText="Invalid entry" maxLength="0"/>
                        </items>
                        <layoutData/>
                    </HBox>
                    <VBox alignItems="Stretch" direction="Column" fitContainer="false" width="auto" height="auto" justifyContent="Start" renderType="Div" visible="true" displayInline="false">
                        <items>
                            <HBox alignItems="Stretch" direction="Row" fitContainer="false" width="auto" height="auto" justifyContent="Start" renderType="Div" visible="true" displayInline="false" class="sapUiMediumMarginBegin">
                                <items>
                                    <Label text="Unid. Org. / Establec:" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true" class="sapUiSmallMarginTop"/>
                                    <ToolbarSpacer width="5rem"/>
                                    <Input type="Text" showValueHelp="false" enabled="true" visible="true" width="40rem" valueHelpOnly="false" required="false" valueStateText="Invalid entry" maxLength="0"/>
                                </items>
                                <layoutData/>
                            </HBox>
                            <HBox alignItems="Stretch" direction="Row" fitContainer="false" width="auto" height="auto" justifyContent="Start" renderType="Div" visible="true" displayInline="false" class="sapUiMediumMarginBegin">
                                <items>
                                    <Label text="Cargo / Servicio :" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true" class="sapUiSmallMarginTop"/>
                                    <ToolbarSpacer width="6.2rem"/>
                                    <Input type="Text" showValueHelp="false" enabled="true" visible="true" width="40rem" valueHelpOnly="false" required="false" valueStateText="Invalid entry" maxLength="0" class="sapUiTinyMarginBegin"/>
                                </items>
                                <layoutData/>
                            </HBox>
                            <HBox alignItems="Stretch" direction="Row" fitContainer="false" width="auto" height="auto" justifyContent="Start" renderType="Div" visible="true" displayInline="false" class="sapUiMediumMarginBegin">
                                <items>
                                    <Label text="Usuario del Equipo :" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true" class="sapUiSmallMarginTop"/>
                                    <ToolbarSpacer width="4.5rem"/>
                                    <Input type="Text" showValueHelp="false" enabled="true" visible="true" width="40rem" valueHelpOnly="false" required="false" valueStateText="Invalid entry" maxLength="0" class="sapUiSmallMarginBegin"/>
                                </items>
                                <layoutData/>
                            </HBox>
                            <HBox alignItems="Stretch" direction="Row" fitContainer="false" width="auto" height="auto" justifyContent="Start" renderType="Div" visible="true" displayInline="false" class="sapUiMediumMarginBegin">
                                <items>
                                    <Label text="Nro. Cel. de Contacto :" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true" class="sapUiSmallMarginTop"/>
                                    <ToolbarSpacer width="3.7rem"/>
                                    <Input type="Text" showValueHelp="false" enabled="true" visible="true" width="40rem" valueHelpOnly="false" required="false" valueStateText="Invalid entry" maxLength="0" class="sapUiTinyMarginBegin"/>
                                </items>
                                <layoutData/>
                            </HBox>
                        </items>
                        <layoutData/>
                    </VBox>
                </content>
            </Panel>
            
            <Panel height="100%" width="67rem" headerText="" expandable="false" expanded="true" expandAnimation="true" backgroundDesign="Solid">
                <content>
                	
                	<form:Form width="100%" editable="true" visible="true">
                        <form:title>
                            <core:Title text="Tipo de Equipo / Servicio" level="Auto"/>
                        </form:title>
                        <form:formContainers>
						</form:formContainers>
                        <form:layout>
                            <form:ResponsiveGridLayout adjustLabelSpan="false" columnsL="2" labelSpanL="3" columnsM="1" labelSpanM="2" labelSpanS="12"/>
                        </form:layout>
                    </form:Form>
                	
                	<Table
					id		="tablaDesglose"
					items	="{path:'sistema>/jsonData'}">
						<headerToolbar>
						<OverflowToolbar>
								<content>
								<ToolbarSpacer width=""/>
									<Button press="masFilas" class="sapUiSmallMarginEnd" type="Transparent" icon="sap-icon://add" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"/>
								</content>
						</OverflowToolbar>
						</headerToolbar>
						<columns>
							
							<Column width="5rem">
								<Text text="Cod. Relativo"/>
							</Column>
							<Column demandPopin="true" hAlign="Begin" minScreenWidth="Large" width="">
								<Text text="Equipo / Servicio"/>
							</Column>
							<Column demandPopin="true" hAlign="Begin" minScreenWidth="Large" width="">
								<Text text="Cod. Patrim."/>
							</Column>
							<Column demandPopin="true" hAlign="Begin" minScreenWidth="Large" width="">
								<Text text="Marca"/>
							</Column>
							<Column demandPopin="true" hAlign="Begin" minScreenWidth="Large" width="">
								<Text text="Modelo / Tipo"/>
							</Column>
							<Column demandPopin="true" hAlign="Begin" minScreenWidth="Large" width="6.5rem">
								<Text text="Serie"/>
							</Column>
							<Column demandPopin="true" hAlign="Begin" minScreenWidth="Large" width="4rem">
								<Text text="Borrar"/>
							</Column>
							
						</columns>
						
						<items>
							<ColumnListItem>
								
								<Text text="{sistema>numDesglose}" textAlign="Begin"/>
								
								<Select selectedKey	= "0">
									<items>
										<core:Item key="0" text="---Seleccionar---"/>
										<core:Item key="1" text="CPU"/>
										<core:Item key="2" text="Monitor"/>
										<core:Item key="3" text="Mouse"/>
										<core:Item key="4" text="Teclado"/>
										<core:Item key="5" text="Otro"/>
									</items>
								</Select>
								
								<Input textAlign="Begin" value="{sistema>motivo}" />
								
								<Input textAlign="Begin" value="{sistema>motivoded}" />
								
								<Input textAlign="Begin" value="{sistema>motivoed}" />
								
								<Input textAlign="Begin" value="{sistema>motivodedede}" />
								
								<Button press="deleteRow" type="Reject" icon="sap-icon://delete"/>
								
							</ColumnListItem>
						</items>
						
					</Table>
                	
                	
